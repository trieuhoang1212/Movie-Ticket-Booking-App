# API Gateway Configuration

# Port for API Gateway
PORT=3000

# Service URLs (Localhost Development)
AUTH_SERVICE_URL=http://127.0.0.1:3001
BOOKING_SERVICE_URL=http://127.0.0.1:3002
USER_SERVICE_URL=http://127.0.0.1:3003
PAYMENT_SERVICE_URL=http://127.0.0.1:3004
NOTIFICATION_SERVICE_URL=http://127.0.0.1:3005

# Service URLs (Docker Compose - uncomment when using Docker)
# AUTH_SERVICE_URL=http://auth-service:3001
# BOOKING_SERVICE_URL=http://booking-service:3002
# USER_SERVICE_URL=http://user-service:3003
# PAYMENT_SERVICE_URL=http://payment-service:3004
# NOTIFICATION_SERVICE_URL=http://notification-service:3005

# Cache Configuration
CACHE_TTL=300000  # 5 minutes in milliseconds

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info  # debug, info, warn, error
